<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ismet.usbterminal"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />

    <application
        android:name=".updated.EToCApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name="com.lamerman.FileDialog"
            android:theme="@style/AppThemeCompat">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <service
            android:name=".UsbService"
            android:enabled="true" >
        </service>

        <service android:name=".updated.UsbService" android:enabled="true"/>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <activity
            android:name=".updated.EToCLoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <!--<action android:name="android.intent.action.MAIN" /> -->
                <action android:name="android.intent.action.VIEW" />

                <!--<category android:name="android.intent.category.LAUNCHER" /> -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Ted main activity ... ie a text field :) -->
        <!-- android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
             -->

        <activity
            android:name=".updated.mainscreen.EToCMainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeCompat"
            android:windowSoftInputMode="stateHidden|adjustResize" >


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<action android:name="android.intent.action.VIEW" /> -->

                <category android:name="android.intent.category.LAUNCHER" />
                <!--<category android:name="android.intent.category.DEFAULT" /> -->
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>

        <activity
            android:name=".TedActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeCompat"
            android:windowSoftInputMode="stateHidden|adjustResize" >

            <!-- Launcher Intent -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>

        <!-- Ted settings activity -->
        <activity
            android:name=".updated.TedSettingsActivity"
            android:label="@string/title_settings"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <activity
            android:name=".TedSettingsActivity"
            android:label="@string/title_settings"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted save as activity -->
        <activity
            android:name=".updated.TedSaveAsActivity"
            android:label="@string/title_save_as"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <activity
            android:name=".TedSaveAsActivity"
            android:label="@string/title_save_as"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- Ted open activity -->
        <activity
            android:name=".updated.TedOpenActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <activity
            android:name=".TedOpenActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted open recent activity -->
        <activity
            android:name=".updated.TedOpenRecentActivity"
            android:label="@string/title_open_recent"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <activity
            android:name=".TedOpenRecentActivity"
            android:label="@string/title_open_recent"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted Select font activity -->
        <activity
            android:name=".updated.TedFontActivity"
            android:label="@string/title_font"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <activity
            android:name=".TedFontActivity"
            android:label="@string/title_font"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>