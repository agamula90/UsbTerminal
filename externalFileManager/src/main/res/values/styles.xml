<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:paddingTop">14dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent">
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonSmall">
        <item name="android:padding">6dp</item>
    </style>

    <style name="AppThemeCompat" parent="Base.Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <!-- <item name="android:itemBackground">@drawable/select_background</item> -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- this should be in sync with usbTerminal app (AppThemeCompat style/colorControlNormal attr) -->
        <item name="colorControlNormal">#bdbdbd</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>